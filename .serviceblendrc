services:
  example:
    environments:
      local:
        install:
          - yarn
          - npm install
        open: http://localhost:8000
        run: python -m http.server
      staging:
        open: http://localhost:8080
        environment:
          HELLO: world
        run:
          version: '3'
          services:
            nginx:
              image: nginx
              ports:
                - 8080:80
      production:
        open: https://example.com
